{
  "name": "modloader64-gui",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npx patch-package",
    "build": "yarn && ts-node ./prebuild.ts && ./tinytsc && yarn pkg",
    "copy": "run-script-os",
    "copy:test:win32": "copy modloader64-gui-win.exe modloader64-gui.exe",
    "copy:nix": "cp ./modloader64-gui-linux ./modloader64-gui && chmod +x ./modloader64-gui",
    "dist": "move modloader64-gui-win.exe dist\\windows\\modloader64-gui.exe && move modloader64-gui-linux dist\\linux\\modloader64-gui && ts-node ./dist.ts",
    "pkg": "pkg --compress GZip .",
    "tinytsc": "cd ./tools/tinytsc && yarn",
    "tools": "yarn tinytsc",
    "fullbuild": "yarn && yarn tools && yarn build && yarn dist",
    "test": "./tinytsc && node ./build/index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/fs-extra": "^9.0.13",
    "@types/gulp": "^4.0.9",
    "@types/node": "^18.0.6",
    "adm-zip": "^0.5.9",
    "asar": "^3.2.0",
    "asar-node": "^3.1.1",
    "commander": "^9.3.0",
    "fs-extra": "^10.1.0",
    "lzma": "^2.3.2",
    "mkdir-recursive": "^0.4.0",
    "ml64tk": "https://github.com/hylian-modding/ml64tk-v1",
    "tree-kill": "^1.2.2",
    "typescript": "^4.7.4",
    "uprocess": "^1.1.0"
  },
  "bin": {
    "modloader64": "./build/index.js"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": [
      "node_modules/**/*",
      "build/windows.zip",
      "build/windows.md5",
      "build/linux.zip",
      "build/linux.md5"
    ],
    "targets": [
      "node16-win-x64",
      "node16-linux-x64"
    ],
    "outputPath": "."
  },
  "devDependencies": {
    "run-script-os": "^1.1.6"
  }
}
